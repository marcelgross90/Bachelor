<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<de.marcelgross.lecturer_lib.generic.customView.ProfileImageView
		android:id="@+id/profileImg"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/picture_height"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:contentDescription="@string/profile_picture"
		android:minWidth="@dimen/picture_width"
		/>

	<View
		android:id="@+id/border"
		android:layout_width="@dimen/spacing_small"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/profileImg"
		android:layout_alignTop="@+id/profileImg"
		android:layout_marginStart="@dimen/spacing_small"
		android:layout_marginLeft="@dimen/spacing_small"
		android:layout_toStartOf="@+id/profileImg"
		android:layout_toLeftOf="@+id/profileImg"
		android:background="@color/colorPrimary"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentTop="true"

		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/border"
		android:layout_toStartOf="@+id/border"
		android:layout_marginStart="@dimen/spacing_small"
		android:layout_marginLeft="@dimen/spacing_small">

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"/>

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/email"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_email"
			android:drawablePadding="@dimen/spacing_small"
			android:drawableStart="@drawable/ic_email"/>

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_phone"
			android:drawablePadding="@dimen/spacing_small"
			android:drawableStart="@drawable/ic_phone"/>

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_home"
			android:drawablePadding="@dimen/spacing_small"
			android:drawableStart="@drawable/ic_home"/>

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/room"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_location"
			android:drawablePadding="@dimen/spacing_small"
			android:drawableStart="@drawable/ic_location"/>

		<de.marcelgross.lecturer_lib.generic.customView.AttributeView
			android:id="@+id/welearn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_open_in_browser"
			android:drawablePadding="@dimen/spacing_small"
			android:drawableStart="@drawable/ic_open_in_browser"/>

	</LinearLayout>

</RelativeLayout>
